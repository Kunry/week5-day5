<h2>Create a user</h2>
<div class="row">
  <div class="col-md-6">
    <form action="/user/{{_id}}" method="post" enctype="multipart/form-data"> {{!-- !!! --}}
      <div class="form-group">
        <label>Username:
          <input type="text" name="username" class="form-control" value="{{username}}"/>
        </label>
      </div>
 
 
      <div class="form-group">
        <label>Image:
          <input type="file" name="avatar" class="form-control-file" />
          <input type="text" name="existingImage" hidden value="{{avatar}}">        </label>
      </div>
 
      <button type="submit" class="btn btn-primary">Create</button>
    </form>
  </div>
</div>